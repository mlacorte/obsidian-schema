{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "PORT"
  ],
  "tasks": {
    "run:build": {
      "outputLogs": "new-only"
    },
    "run:dev": {
      "cache": false,
      "persistent": true,
      "outputLogs": "new-only"
    },
    "run:clean": {
      "cache": false
    },
    "//#run:clean": {
      "cache": false
    }
  }
}
