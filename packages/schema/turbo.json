{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "run:build": {
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "run:dev": {
      "inputs": ["src/**"],
      "outputs": ["dist/**"]
    },
    "run:test": {
      "inputs": ["src/**", "test/**"]
    }
  }
}